{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "labels": [
    "dependencies"
  ],
  "packageRules": [
    {
      "depTypeList": [
        "optionalDependencies"
      ],
      "addLabels": [
        "optional"
      ]
    },
    {
      "updateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "automerge": true
    },
    {
      "sourceUrlPrefixes": [
        "https://github.com/nrwl/"
      ]
    },
    {
      "updateTypes": [
        "major"
      ],
      "labels": [
        "major"
      ]
    }
  ],
  "schedule": [
    "after 6pm and before 8am every weekday",
    "every weekend"
  ],
  "vulnerabilityAlerts": {
    "labels": [
      "security"
    ]
  }
}

